<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbackground"
    tools:context=".SignupActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FİTNESS UYGULAMASI"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="550dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btnPassVisible2"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/resim_visible_off"
            app:layout_constraintBottom_toBottomOf="@+id/editTextSifreTekrar"
            app:layout_constraintEnd_toEndOf="@+id/editTextSifreTekrar"
            app:layout_constraintTop_toTopOf="@+id/editTextSifreTekrar" />

        <Button
            android:id="@+id/btnPassVisible1"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/resim_visible_off"
            app:layout_constraintBottom_toBottomOf="@+id/editTextSifre"
            app:layout_constraintEnd_toEndOf="@+id/editTextSifre"
            app:layout_constraintTop_toTopOf="@+id/editTextSifre" />

        <Button
            android:id="@+id/buttonKayit"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_marginTop="32dp"
            android:background="@color/white"
            android:padding="8dp"
            android:text="Kayıt Ol"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextSifreTekrar" />

        <EditText
            android:id="@+id/editTextSifreTekrar"
            android:layout_width="350dp"
            android:layout_height="65dp"
            android:layout_marginTop="24dp"
            android:drawableLeft="@drawable/resim_sifre"
            android:hint="Şifrenizi Tekrar Giriniz"
            android:inputType="textPassword"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextSifre" />

        <EditText
            android:id="@+id/editTextSifre"
            android:layout_width="350dp"
            android:layout_height="65dp"
            android:layout_marginTop="24dp"
            android:drawableLeft="@drawable/resim_sifre"
            android:hint="Şifre Giriniz"
            android:inputType="textPassword"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextKullaniciAdi" />



        <EditText
            android:id="@+id/editTextKullaniciAdi"
            android:layout_width="350dp"
            android:layout_height="65dp"
            android:layout_marginTop="56dp"
            android:drawableLeft="@drawable/resim_kullanici_adi"
            android:hint="Email Giriniz"
            android:inputType="textEmailAddress"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
             />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>